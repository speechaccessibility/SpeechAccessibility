@{
    ViewData["Title"] = "Testing Upload File";
}

@{
    ViewBag.Title = "Testing Upload File";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Testing Upload File</h2>
<div>
    <form asp-route="SpeechFile/UploadFile" enctype="multipart/form-data" method="POST">
        <input type="file" name="file" />
        <button type="submit">Upload File</button>
    </form>
</div>

@if (ViewBag.Message != null)
{
    <div class="alert" style="margin-top:20px">
        @ViewBag.Message
    </div>
}

