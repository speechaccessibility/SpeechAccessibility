@{
    ViewBag.Title = "View Contributors Compensation History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.6/css/responsive.dataTables.min.css" />
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<h1>Contributors Compensation History</h1>
<div style="width: 1500px">
    <table class="table table-striped table-bordered table-hover" id="CompensationHistoryTable" cellspacing="0" align="center"></table>
</div>

@section scripts {
    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/rowgroup/1.3.0/js/dataTables.rowGroup.min.js"></script>

    <script src="https://cdn.datatables.net/responsive/2.2.6/js/dataTables.responsive.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-scrollTo/2.1.2/jquery.scrollTo.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
             //bind datatable for Compensation
            var oCompensationHistoryTable = $("#CompensationHistoryTable").on('error.dt',
                function(e, settings, techNote, message) {
                    alert('Error loading the data. It could be the timeout issue. Please try to reload your browser. ', message);
                }).DataTable({
                "serverSide": true,
                "processing": true,
                "responsive": true,
                "iDisplayLength": 100,
                "dom": "<'row'<'col-sm-4'l><'col-sm-4'i><'col-sm-4'f>>" +
                    "<'row'<'col-sm-12'tr>>p", //'<"top"l>rift<"bottom"p><"clear">',
                "ajax": ({
                    "url": '@Url.Action("ContributorsCompensationHistory", "Report")',
                    "type": "POST",
                    "datatype": "json"
                }),
                "bAutoWidth": false,
                "aaSorting": [[1, 'asc']],
                "columns": [
                    {
                        "title": "ContributorID",
                            "data": "contributorId",
                        "searchable": true,
                        "orderable": true,
                        "visible": true,
                            "name": "ContributorID"
                    },
                    {
                        "title": "First Name",
                        "data": "firstName",
                        "searchable": true,
                        "orderable": true,
                        "visible": true,
                        "name": "FirstName"
                    },
                    {
                        "title": "Last Name",
                        "data": "lastName",
                        "searchable": true,
                        "orderable": true,
                        "visible": true,
                        "name": "LastName"
                    },
                        {
                            "title": "EmailAddress",
                            "data": "emailAddress",
                            "searchable": true,
                            "orderable": true,
                            "visible": true,
                            "name": "EmailAddress"
                        },
                        {
                            "title": "Etiology",
                            "data": "etiologyName",
                            "searchable": true,
                            "orderable": true,
                            "visible": true,
                            "name": "EtiologyName",
                            "render": function (data, type, row){
                                if(row.promptCategory !=null)
                                    return row.etiologyName + '-' + row.promptCategory;
                                else
                                    return row.etiologyName;
                            }
                        },
                        
                    {
                        "title": "First Card",
                        "data": "sendFirstCard",
                        "searchable": true,
                        "orderable": true,
                        "visible": true,                            
                        "name": "SendFirstCard",
                        "render": function (data) {
                            if (data != null)
                            {
                                var date = new Date(data);
                                var month = date.getMonth() + 1;
                                return (month.toString().length > 1 ? month : "0" + month) + "/" + date.getDate() + "/" + date.getFullYear() + "&nbsp;" + (date.getHours() < 10 ? ("0" + date.getHours()) : date.getHours()) + ":" + (date.getMinutes() < 10 ? ("0" + date.getMinutes()) : date.getMinutes());

                            }
                            return '';
                            },
                    },
                    {
                        "title": "Second Card",
                        "data": "sendSecondCard",
                        "searchable": true,
                        "orderable": true,
                        "visible": true,                          
                        "name": "SendSecondCard",
                        'render': function (data) {
                            if (data != null)
                            {
                                var date = new Date(data);
                                var month = date.getMonth() + 1;
                                return (month.toString().length > 1 ? month : "0" + month) + "/" + date.getDate() + "/" + date.getFullYear() + "&nbsp;" + (date.getHours() < 10 ? ("0" + date.getHours()) : date.getHours()) + ":" + (date.getMinutes() < 10 ? ("0" + date.getMinutes()) : date.getMinutes());

                            }
                            return '';
                        },
                    },
                    {
                        "title": "Third Card",
                        "data": "sendThirdCard",
                        "searchable": true,
                        "orderable": true,
                        "visible": true,                            
                        "name": "SendThirdCard",
                        'render': function (data) {
                            if(data !=null)
                            {
                                    var date = new Date(data);
                                    var month = date.getMonth() + 1;
                                    return (month.toString().length > 1 ? month : "0" + month) + "/" + date.getDate() + "/" + date.getFullYear() + "&nbsp;" + (date.getHours() < 10 ? ("0" + date.getHours()) : date.getHours()) + ":" + (date.getMinutes() < 10 ? ("0" + date.getMinutes()) : date.getMinutes());

                            }
                            return '';
                        },
                    },
                    {
                        "title": "Paid Helper",
                        "data": "helperInd",
                        "searchable": true,
                        "orderable": true,
                        "visible": true,
                        "name": "HelperInd",
                        'render': function (data,type,row) {                               
                            if(data=='Yes')
                                    return row.helperEmail;
                                    
                            return ''
                        },
                    },
                ],
                "ordering": true,
                "paging": true,
                "pageLength": 100,
                "lengthMenu": [[25, 50, 100, 3000], [25, 50, 100, 3000]]
            });

            
         

        });//End document ready

    </script>
}