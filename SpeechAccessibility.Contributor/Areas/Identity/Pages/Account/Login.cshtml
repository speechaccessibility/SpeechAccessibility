@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger">
                    <h2>Validation errors:</h2>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email">Enter your <strong>Email:</strong></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Enter your <strong>Password:</strong></label>
                    <input id="password" asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="checkbox" onclick="showHidePassword()"> Show Password
                </div>
                <div class="form-group">
                    <input class="checkbox" type="checkbox" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe">Remember Me</label>        
                    </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>Don't have an account? <a asp-page="./DiagnosisRegister">Sign Up</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
